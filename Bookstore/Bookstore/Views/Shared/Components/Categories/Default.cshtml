@{
}
@* Makes it easy to ienumerate through *@
@model IEnumerable<string> 

<div class="btn-block mt-5 gap-4 text-center">
    <div class="mb-5">
        <h4>Categories:</h4>
    </div>
    <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="" asp-route-pageNum ="1" class="btn btn-outline-secondary btn-md btn-category btn-block">All Categories</a><br />

    @* Makes a buton of categories to select from *@
    @foreach (string c in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="@c" asp-route-pageNum ="1" 
           class="btn btn-md btn-category btn-block @(ViewBag.SelectedType == c ? "btn-primary" : "btn-outline-secondary")">@c</a><br />
    }
</div>

