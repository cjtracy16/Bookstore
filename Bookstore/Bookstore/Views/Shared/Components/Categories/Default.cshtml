@{
}
@* Makes it easy to ienumerate through *@
@model IEnumerable<string> 

<div class="btn-block mt-3 gap-3 text-center">
    <div class="mb-5 font-weight-bolder text-byu">
        <h4>Categories:</h4>
    </div>
    <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="" asp-route-pageNum ="1" class="btn btn-outline-secondary btn-md btn-category p-2 mb-2">All Categories</a><br />
    <div class="text-center">
    @* Makes a buton of categories to select from *@
    @foreach (string c in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="@c" asp-route-pageNum ="1" 
           class="btn btn-md btn-category p-2 mb-2 @(ViewBag.SelectedType == c ? "color-byu" : "btn-outline-secondary")">@c</a><br />
    }
    </div>
</div>

