@{
}
@model Cart
<div class="">
    @if (Model.Items.Count() > 0)
    {
        <small class="navbar-text cartInfo">
            <b>Your cart:</b>
            @Model.Items.Sum(x => x.Quantity) item(s)
            @Model.CalculateTotal().ToString("c")
        </small>
    }
    <a class="btn btn-sm btn-secondary navbar-btn" asp-page="/Purchase"
       asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
        <i class="fa fa-shopping-cart" style='font-size:24px'></i>
    </a>
    <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="" asp-route-pageNum="1" class="btn btn-sm btn-secondary navbar-btn"><i class="fa fa-home" style='font-size:24px'></i></a>
</div>
